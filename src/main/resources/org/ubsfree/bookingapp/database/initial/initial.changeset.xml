<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
  <changeSet id="global-init" author="lconnected">
    <createTable tableName="Booking">
      <column name="id" type="number">
        <constraints nullable="false" primaryKey="true" unique="true"/>
      </column>
      <column name="time_start" type="timestamp">
        <constraints nullable="false"/>
      </column>
      <column name="service_id" type="number">
        <constraints nullable="false"/>
      </column>
      <column name="specialist_id" type="number">
        <constraints nullable="false"/>
      </column>
    </createTable>
    <createTable tableName="Service">
      <column name="id" type="number">
        <constraints nullable="false" primaryKey="true" unique="true"/>
      </column>
      <column name="duration_minutes" type="number">
        <constraints nullable="false"/>
      </column>
      <column name="cooldown_minutes" type="number">
        <constraints nullable="false"/>
      </column>
    </createTable>
    <createTable tableName="Specialists">
      <column name="id" type="number">
        <constraints nullable="false" primaryKey="true" unique="true"/>
      </column>
      <column name="first_name" type="varchar">
        <constraints nullable="false"/>
      </column>
      <column name="second_name" type="number">
        <constraints nullable="false"/>
      </column>
      <column name="middle_name" type="number"/>
    </createTable>
    <createTable tableName="Service_Specialists">
      <column name="service_id" type="number">
        <constraints nullable="false"/>
      </column>
      <column name="specialist_id" type="varchar">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet id="initial-1.0" author="lconnected">
    <tagDatabase tag="initial-1.0"/>
  </changeSet>

</databaseChangeLog>